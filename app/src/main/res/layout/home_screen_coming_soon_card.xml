<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_15dp"
    app:cardCornerRadius="@dimen/_16dp"
    app:cardElevation="@dimen/_0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_40dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingBottom="@dimen/_40dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_success"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coming_soon"
            android:textColor="@color/peachyPink"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_partners"
            android:textColor="@color/darkBlueGrey"
            android:textSize="@dimen/font_14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <vcci.consumer.android.common.CircleImageView
                    android:id="@+id/hdfc"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/profile"


                    />

                <TextView
                    android:fontFamily="@font/medium"
                    android:textColor="@color/darkBlueGrey"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:layout_below="@+id/hdfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HDFC" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_16dp">
                <vcci.consumer.android.common.CircleImageView
                    android:id="@+id/icici"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:fontFamily="@font/medium"
                    android:textColor="@color/darkBlueGrey"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:layout_below="@+id/icici"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICICI" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_16dp">
                <vcci.consumer.android.common.CircleImageView
                    android:id="@+id/axis"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:fontFamily="@font/medium"
                    android:textColor="@color/darkBlueGrey"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:layout_below="@+id/axis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AXIS" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_16dp">
                <vcci.consumer.android.common.CircleImageView
                    android:id="@+id/citi"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:fontFamily="@font/medium"
                    android:textColor="@color/darkBlueGrey"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:layout_below="@+id/citi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CITI" />



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>