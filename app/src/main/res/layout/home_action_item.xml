<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlActionHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAction"
        style="@style/ItemCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlActionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_14dp"
            android:paddingRight="@dimen/_14dp">

            <ImageView
                android:id="@+id/ivActionImage"
                android:layout_width="@dimen/action_image_size"
                android:layout_height="@dimen/action_image_size"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:paddingStart="@dimen/padding_action_item"
                android:paddingTop="@dimen/_12dp"
                android:paddingEnd="@dimen/_8dp"
                tools:src="@drawable/loading_animation" />

            <TextView
                android:id="@+id/tvActionName"
                style="@style/ActionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivActionImage"
                android:gravity="center"
                android:minLines="2"
                android:paddingTop="@dimen/_8dp"
                android:paddingBottom="@dimen/_8dp"
                tools:text="Diagnose This Device" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
