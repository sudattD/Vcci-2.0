<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/darkBlueGrey</item>
        <item name="android:statusBarColor" android:targetApi="LOLLIPOP" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:windowLightStatusBar">true</item>


        <!--  <item name="android:colorBackground">@color/colorPrimary</item> -->
    </style>

    <style name="BankOnBoardingActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" android:targetApi="LOLLIPOP" tools:targetApi="lollipop">@color/darkBlue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="ToolbarLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProfileProgress" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:visibility">visible</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionHeader" parent="FontMedium">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="NestedScrollViewScrollBarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarFadeDuration">0</item>
        <item name="android:scrollbarThumbVertical">@color/quantum_grey</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">@dimen/_2dp</item>
    </style>


    <style name="toolbarTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PartialToolbarTitle" parent="FontBold">
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textColor">@color/darkBlueGrey</item>
        <item name="android:lineSpacingMultiplier">0.1</item>

    </style>

    <style name="ProfileToolBar" parent="FontBold">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/darkBlueGrey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">2dp</item>
    </style>


    <style name="LabelGeneral" parent="FontBold">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/darkBlueGrey</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="FontRegular">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="FontLight">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="FontBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="FontMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="SmallBookGeneral" parent="FontLight">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/nav_item_text</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="navFonts" parent="FontBold">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/nav_item_text</item>
        <item name="android:lineSpacingMultiplier">0.6</item>
    </style>


    <style name="solidDodgerBlueButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/accent_button_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">171dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>


    <style name="solidDodgerBlueButtonCommon" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/accent_button_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:paddingLeft">@dimen/_30dp</item>
        <item name="android:paddingRight">@dimen/_30dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <style name="FundTransferButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_fundtransfer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">171dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">Fund Transfer</item>
        <item name="android:layout_marginTop">@dimen/_45dp</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <style name="LetsBeginButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_letsbegin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dodgerBlue</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">Lets begin</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <style name="lightSKyBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_lightskyblue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dodgerBlue</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">98dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="signupButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/accent_button_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawableLeft">@drawable/glogo_circle</item>
    </style>

    <style name="EditTextTheme">
        <item name="backgroundTint">@color/tab_indicator_selected</item>
    </style>


    <style name="FlatButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/offWhite</item>

       <!-- <item name="drawableRightCompat">@drawable/arrow_right_email</item>-->
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@drawable/bottomsheet_bg</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="CardStyleBankCards" parent="CardView">
        <item name="cardBackgroundColor">@color/darkBlueGrey</item>
        <item name="elevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:radius">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_220dp</item>
    </style>

    <style name="SmallBookFaded" parent="FontRegular">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ItemCardView" parent="@style/Base.CardView">
        <item name="cardCornerRadius">@dimen/box_radius</item>
        <item name="cardElevation">@dimen/_2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="ActionName" parent="FontMedium">
        <item name="android:textColor">@color/general_text</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
